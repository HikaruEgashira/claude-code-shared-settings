{
    "$schema": "./settings-schema.json",
    "permissions": {
        "allow": [
            "Bash",
            "WebFetch",
            "WebSearch"
        ],
        "deny": [
            "WebFetch(domain:github.com)"
        ]
    },
    "env": {
        "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
        "DISABLE_NON_ESSENTIAL_MODEL_CALLS": "1",
        "BASH_MAX_TIMEOUT_MS": "600000"
    },
    "preferredNotifChannel": "terminal_bell"
}
